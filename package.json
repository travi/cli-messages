{
  "name": "@travi/cli-messages",
  "description": "status messaging for output of CLI applications",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "repository": "travi/cli-messages",
  "bugs": "https://github.com/travi/cli-messages/issues",
  "homepage": "https://npm.im/@travi/cli-messages",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha --recursive test/unit",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "devDependencies": {
    "@babel/register": "7.16.9",
    "@travi/any": "2.0.19",
    "@travi/babel-preset": "3.0.75",
    "@travi/eslint-config-travi": "1.8.8",
    "ban-sensitive-files": "1.9.17",
    "chai": "4.3.6",
    "codecov": "3.8.3",
    "commitlint-config-travi": "1.4.8",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "mocha": "9.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "10.0.1",
    "remark-preset-lint-travi": "2.0.9",
    "rimraf": "3.0.2",
    "rollup": "2.66.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "13.0.1"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "log-symbols": "4.1.0"
  }
}
